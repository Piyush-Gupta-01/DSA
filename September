//<-----------------------------------------------------------------DAY-1-03/09/24------------------------------------------------------------------------------------->
53.MAXIMUM SUBARRAY LEETCODE
class Solution {
public:
    int maxSubArray(vector<int>& nums) {

    //       <--------------USING KADANE'S ALGO----------------->

    int n=nums.size();
    int sum=0;
    int max=INT_MIN;
    for(int i=0;i<n;i++){
        sum+=nums[i];
        if(sum>max) max=sum;
        if(sum<0) sum=0;
    }
    return max;
    }
};

//<-----------------------------------------------------------------DAY-2-04/09/24------------------------------------------------------------------------------------->

